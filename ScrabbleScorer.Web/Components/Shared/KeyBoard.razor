<div class="keyboard">
    @foreach (var row in _keyRows)
    {
        <div class="keyboard-row">
            @foreach (var key in row)
            {
                <button class="key" @onclick="async() => await OnKeyClick(key)">
                    @key
                </button>
            }

        </div>
    }
    <button class="key" @onclick="async () => await BackspacePressed.InvokeAsync()">
        âŒ«
    </button>
</div>

@code {
    private readonly string[][] _keyRows =
    [
        ["Q", "W", "E", "R", "T", "Y", "U", "I", "O", "P"],
        ["A", "S", "D", "F", "G", "H", "J", "K", "L"],
        ["Z", "X", "C", "V", "B", "N", "M", "_"]
    ];

    [Parameter] public EventCallback<string> KeyPressed { get; set; }
    [Parameter] public EventCallback<string> BackspacePressed { get; set; }

    private async Task OnKeyClick(string key)
    {
        await KeyPressed.InvokeAsync(key);
    }

}